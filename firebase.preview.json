{
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "trailingSlash": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*",
        "headers": [{
          "key": "Cache-Control",
          "value": "no-cache, no-store, no-transform"
        }]
      },
      {
        "source": "**/*",
        "headers": [{
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }]
      },
      {
        "source": "**/*",
        "headers": [{
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self'"
        }]
      }
    ]
  }
}