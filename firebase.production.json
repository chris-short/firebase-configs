{
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "trailingSlash": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|css|js|eot|otf|ttf|ttc|woff|pdf)",
        "headers" : [ {
            "key" : "Cache-Control",
            "value" : "max-age=2764800"
        } ]
      },
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [{
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }]
      },
      {
        "source": "404.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=300"
        }]
      },
      {
        "source": "**/*",
        "headers": [{
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }]
      }
    ]
  }
}